    // Fonction pour vérifier si le joueur 1 a gagné
    bool joueur1_a_gagne(int x) {
        // Le joueur 1 gagne si sa pièce atteint la ligne 0
        return x == 0;
    }

    // Fonction pour vérifier si le joueur 2 a gagné
    bool joueur2_a_gagne(int x) {
        // Le joueur 2 gagne si sa pièce atteint la ligne 8
        return x == 8;
    }
